// Function to set speed
function setDinoSpeed(speed) {
    Runner.instance_.currentSpeed = speed;
    console.log(`Dino speed set to: ${speed}`);
}

// Function to set score (points)
function setDinoScore(score) {
    Runner.instance_.distanceRan = score / Runner.instance_.distanceMeter.config.COEFFICIENT;
    Runner.instance_.distanceMeter.update(score);
    console.log(`Dino score set to: ${score}`);
}

// Example Usage
setDinoSpeed(20); // Set speed (default is ~6-10)
setDinoScore(99999); // Set score (default starts at 0)
